{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",

    "target": "esnext",
    "module": "esnext",

    "declaration": true,
    "removeComments": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
